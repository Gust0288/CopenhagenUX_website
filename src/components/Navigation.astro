    text-decoration: none;
    color: black;
    border: solid black 2px;
    border-left: none;
    border-right: none;
    margin-top: 15px;
    margin-bottom: 15px;
  }
  .newsletterBut {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.5em;
  }
  .nav1 {
  }
  .nav2 {
    display: grid;
    grid-template-columns: 1fr 1fr 0.5fr;
    gap: 2em;
  }
  .buttonBurger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1em;
  }
  .side-menu {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: auto;
    width: 200px;
    position: fixed;
    top: 76.5px;
    right: -200px;
    background-color: white;
    overflow-x: hidden;
    border: solid black 1.5px;
    border-right: none;
    border-top: none;
    transition: 0.5s;
    /* transform: scale(0); */
  }

  .side-menu ul {
    list-style: none;
    padding: 0;
  }

  .side-menu ul li {
    padding: 15px;
  }

  .side-menu ul li a {
    text-decoration: none;
    color: black;
    font-size: 18px;
    display: block;
    text-align: center;
    border: solid black 2px;
    border-left: none;
    border-right: none;
    margin-left: 20px;
    margin-right: 20px;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  .side-menu ul li a:hover {
    color: #d8d5d5;
  }
  .open {
    /* width: 200px; */
    /* transform: scale(1); */
    transform: translateX(-200px);
  }
  @media (max-width: 750px){
    #tickets, #program{
      display: none;
    }
    #logo{
      width: 300px;
      
    }
  }
  @media (max-width: 450px){
    #tickets, #program{
      display: none;
    }
    #logo{
      width: 210px;
    }

  }
</style>
