---
const { data } = Astro.props;
// console.log(data);
---

<a href={`speakers/${data.slug}`}>
  <article>
    <div id="cardImgWGradient">
      <img src={"/img/" + data.image} alt="Speaker" />
      <div id="imgGradient"></div>
    </div>
    <div id="textContainer">
      <div id="titleContainer">
        <h3>{data.fullname}</h3>
        <h4>{data.profession}</h4>
      </div>
      <p>{data.topic}</p>
    </div>
  </article>
</a>

<style>
  a{
    text-decoration: none;
  }
  article {
    width: 300px;
    height: 500px;
    text-align: right;
    clip-path: polygon(0 0, 70% 0, 100% 25%, 100% 100%, 30% 100%, 0 75%);
    background-color: rgb(249, 250, 249);
    border-right: solid 8px #06214d;
    border-bottom: solid 8px #06214d;
  }

  #cardImgWGradient {
    width: 300px;
    height: 400px;
    position: relative;
  }

  #imgGradient {
    position: absolute;
    top: 0;
    left: 0;
    background-image: linear-gradient(
      rgba(249, 250, 249, 0) 0%,
      rgba(249, 250, 249, 0) 60%,
      rgba(249, 250, 249, 1) 100%
    );
    width: 300px;
    height: 400px;
  }

  #cardImgWGradient img {
    width: auto;
    height: 400px;
    justify-content: center;
  }

  h4 {
    margin: 0;
    color: rgba(23, 39, 39, 0.6);
    padding-bottom: 10px;
  }
  h3 {
    margin: 3px;
    margin-right: 0;
    color: rgba(23, 39, 39, 1);
  }

  p {
    text-align: right;
    margin: 0;
    color: rgb(23, 39, 39);
  }
  #textContainer {
    padding: 5px;
    padding-top: 0;
  }

  #titleContainer {
    border-bottom: solid 2px rgba(23, 39, 39, 0.3);
  }
</style>
