---
const { text, headliner, pathImg } = Astro.props;
---

<article class="mainArticle">
  <img src={pathImg} alt="" />
  <h3>{headliner}</h3>
  <p>{text}</p>
</article>

<style>
  .mainArticle {
    background-image: url("/svg/textBox.svg");
    width: 600px;
    height: 330px;
  }
  p {
    color: white;
    margin-left: 50px;
    margin-top: 17px;
    padding-right: 50px;
  }
  h3 {
    color: white;
    margin-left: 50px;
    margin-top: 29px;
  }
  img {
    margin-left: 13px;
    margin-top: 12px;
  }
  @media (max-width: 750px) {
    .mainArticle {
      margin-left: -25px;
      margin-right: -25px;
      
    }
  }
</style>
