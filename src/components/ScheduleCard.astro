---
const { date, time, stage, img, name, company, country, titel, text, variantBorder } =
  Astro.props;
---

<article id={variantBorder}>
  <div class="dato">
    <h4 id="date">{date}</h4>
    <p>{time}</p>
    <p>{stage}</p>
  </div>
  <div class="billede">
    <img src={img} alt="" />
    <h5>{name}</h5>
    <p>{company}</p>
    <p>{country}</p>
  </div>
  <div class="textFelt"    >
    <h4 id="titel">{titel}</h4>
    <hr />
    <p id="textFelt">{text}</p>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: 1fr 1fr 4fr;
    border-top: solid black 2px;
    

    margin-left: 30px;
    margin-right: 30px;
    margin-bottom: 15px;
    padding-bottom: 10px;
  }
  .dato,
  .textFelt {
    margin-left: 50px;
    margin-right: 50px;
    
  }
  .dato {
    margin-left: 0;
  }
  article p {
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 13px;
    color: rgba(0, 0, 0, 0.55);
  }
  article #date {
    margin-bottom: 3px;
  }
  h5 {
    margin-top: 3px;
    margin-bottom: 5px;
  }
  img {
    margin-bottom: 5px;
    margin-top: 25px;
  }
  #textFelt {
    color: black;
    margin-top: 5px;
  }
  hr {
    width: 35%;
    margin-left: 0;
  }
  #titel {
    margin-bottom: 10px;
  }
  #borderBottom{
    border-bottom: solid black 2px;
  }
</style>
